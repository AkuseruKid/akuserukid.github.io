{% extends "layout.html.twig" %}

{% block content %}
    <main class="main">
        <div class="card">
            <form action="" method="POST" class="contact-form">
                <div class="form-flex">
                    <label for="nickname">Name</label>
                    <input type="text" name="user_nickname" id="nickname" placeholder="Enter your nickname">
                    <label for="message">Message</label>
                    <textarea name="user_message" id="message" cols="30" rows="5" placeholder="Enter your message"></textarea>
                </div>
                <button type="submit">Submit</button>
            </form>
        </div>
    </main>
{% endblock %}